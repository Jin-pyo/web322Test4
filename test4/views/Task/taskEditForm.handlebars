 <h2>Edit Product</h2>
    <form method="POST" action="/task/edit/{{taskDocument._id}}/?_method=PUT">

        <label>Title</label>
        <input type="text" name="title" id="title" value="{{taskDocument.title}}"> <br><br>

       <label>Product Price</label>
        <input type="text" name="price" id="price" value="{{taskDocument.price}}"> <br><br>

        <label>Quantity on Hand</label>
        <input type="text" name="quantity" id="quantity" value="{{taskDocument.quantity}}"> <br><br>

        <label>Product Description</label>
        <textarea id="description" name="description">{{taskDocument.description}}</textarea><br><br>

        <input type="radio" name="tax" id="yes" value="yes" checked> Yes<br>
        <input type="radio" name="tax" id="no" value="no"> No<br>

        <input type="submit" value="Update Task">
    </form>